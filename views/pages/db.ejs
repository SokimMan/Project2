<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
</head>

<body>
<style>
table, th {
  border: 1px solid black;
  padding: 10px;
}

td {
  border: 1px solid black;
  padding: 10px;
}
</style>
<% include ../partials/nav.ejs %>

<div class="container">
<h2>Contacts Results</h2>

<table>
  <tr>
    <th> ID</th>
    <th> First Name</th>
    <th> Last Name</th>
    <th> City</th>
    <th> Delete</th>
  </tr>

<% results.forEach(function(r) { %>
	<tr>
    <td><%= r.external_id %></td>
    <td><%= r.firstname %></td>
    <td><%= r.lastname %></td>
    <td><%= r.city %></td>
    <td>
    	<form id= "back" action="/delete" method="get">
    		<input type="hidden" name="external_id" value="<%= r.external_id %>">
			<input type="submit" value="Delete">
    </td>
  	</tr>
<% }); %>

</table>
<br>
<form id= "back" action="/home.html" method="get">
	<input type="submit" value="Go Back">



</div>




</body>
</html>
